<%= render 'shared/errors', obj: @user %>
<%= form_for @user do |form| %>
<table class="table_style">
  <tr>
    <th><%= form.label :user_name %></th>
    <td><%= form.text_field :user_name %></td>
  </tr>
  <tr>
    <th><%= form.label :user_address %></th>
    <td><%= form.text_field :user_address %></td>
  </tr>
  <tr>
    <th><%= form.label :user_lo %></th>
    <td><%= form.text_field :user_lo %></td>
  </tr>
  <tr>
    <th><%= form.label :password %></th>
    <td><%= form.password_field :password %></td>
  </tr>
  <tr>
    <th><%= form.label :password_confirmation %></th>
    <td><%= form.password_field :password_confirmation %></td>
  </tr>
</table>
<div class="button_area">
  <%= form.submit "更新", class: 'button' %>
</div>
<% end %>
